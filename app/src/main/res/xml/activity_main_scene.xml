<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_height="wrap_content"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="76dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/switch2" />
        <Constraint
            android:layout_height="261dp"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="124dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintHorizontal_bias="0.495"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="290dp"
            android:id="@+id/imageView" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="92dp"
            android:layout_marginStart="92dp" />
        <Constraint
            android:layout_height="211dp"
            android:layout_marginTop="84dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="192dp"
            android:id="@+id/radioGroup"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:layout_height="211dp"
            motion:layout_editor_absoluteX="16dp"
            android:layout_width="192dp"
            android:id="@+id/radioGroup"
            motion:layout_constraintTop_toBottomOf="@+id/textView"
            motion:layout_editor_absoluteY="96dp" />
        <Constraint
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            motion:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:id="@+id/textView"
            motion:layout_constraintStart_toStartOf="@+id/radioGroup"
            motion:layout_constraintEnd_toEndOf="@+id/radioGroup"
            motion:layout_editor_absoluteX="87dp" />
        <Constraint
            android:layout_marginEnd="41dp"
            android:layout_height="167dp"
            android:layout_marginRight="41dp"
            android:layout_marginTop="44dp"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="0dp"
            motion:layout_constraintTop_toBottomOf="@+id/textView2"
            android:id="@+id/recyclerView2"
            motion:layout_constraintStart_toEndOf="@+id/radioGroup"
            motion:layout_constraintHorizontal_bias="0.0" />
    </ConstraintSet>
</MotionScene>